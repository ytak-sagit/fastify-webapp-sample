{
    "name": "Fastify Webapp Sample",
    "dockerComposeFile": [
        "../compose.db.yaml",
        "../compose.app.yaml"
    ],
    "service": "app",
    "workspaceFolder": "/app",
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    // NOTE: 初回のみ要実行。必要に応じてコメント解除し、実行してください
    // "onCreateCommand": {
    //     "npm-install": "set -ex && npm i",
    //     // TODO: 実行のたびにPlaywrightインストールが行われるため、インストール済の場合はスキップできるようにしたい
    //     "npm-install-e2e": "set -ex && cd e2e && npm i && npx playwright install --with-deps"
    // },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.insertSpaces": true,
                "editor.indentSize": 2,
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true,
                "[javascript]": {
                    "javascript.preferences.quoteStyle": "single"
                }
            }
        }
    }
}